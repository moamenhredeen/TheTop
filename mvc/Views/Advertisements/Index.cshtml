@model IEnumerable<AdvertisementDTO>
@{
    List<string> list = ViewBag.listC;
    //Layout = "_LayoutDesigner";

    }


<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (string item in list)
                    {
                <li data-filter=".@item">@item</li>
            }
                   
                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var i in Model)
            {

                <div class="col-lg-4 col-md-6 portfolio-item @i.Name">
                    <img src="~/assets/img/portfolio/portfolio-1.jpg" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <h4>Catogry @i.CategoryId</h4>
                        <h5>@i.Name</h5>
                        <div class="d-flex justify-content-between">
                            <div>
                                <p style="font-size:20px">@i.Price $</p>
                            </div>
                            @if (false)
                            {
                                //i.Customer.Role == RoleCustomer.Designer
                                <div class="w-50 d-flex justify-content-around">
                                    <div>
                                        <a asp-action="Details" asp-route-Name="@i.Name" class="btn">
                                            <span class="bx bx-link text-white " style="font-size:25px"></span>
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-action="Edit" asp-route-Name="@i.Name" class="btn">
                                            <span class="iconify text-white" data-icon="dashicons:update-alt" style="font-size:25px"></span>
                                        </a>
                                    </div>
                                    <div>
                                        <a asp-action="Delete" asp-route-Name="@i.Name" class="btn">
                                            <span class="iconify text-danger" data-icon="fluent:delete-24-filled" style="font-size:25px"></span>
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="~/home/img/portfolio/portfolio-1.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="App 1"><i class="bx bx-plus"></i></a>
                                <a asp-action="Details" asp-route-Name="@i.Name" class="details-link" title="More Details"><i class="bx bx-link"></i></a>
                                <button type="button" class="btn btn-primary">Add to Cart</button>
                            }


                        </div>


                    </div>
                </div>
            }

        </div>

    </div>
</section>

@await Html.PartialAsync("~/Views/Reviews/Create.cshtml") 

