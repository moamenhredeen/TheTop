@model IEnumerable<CategoryDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<h2 class="m-5">Categorys</h2>
<hr />
<p class="ml-5">
    <a asp-action="create" class="btn btn-outline-info">Add Category</a>
</p>
<table class="table ml-5">
    <thead>
        <tr class="table-primary">
            <th><label asp-for="@Model.FirstOrDefault(c => c.ID == 0).Name"></label></th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is null || Model.ToList().Count == 0)
        {
            <tr>
                <td colspan="5"> There is no data here</td>
            </tr>
        }
        else
        {
            foreach (CategoryDTO c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>
                        <a asp-action="edit" asp-route-id="@c.ID" class="text-success"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <a asp-action="details" asp-route-id="@c.ID" class="text-primary"><i class="fas fa-info"></i></a>
                    </td>
                    <td>
                        <a asp-action="delete" asp-route-id="@c.ID" class="text-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr class="table-info">
            <td colspan="5"></td>
        </tr>
    </tfoot>
</table>

