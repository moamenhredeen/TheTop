@model AdvertisementDTO
@{
//Layout = "_LayoutDesigner";
}
<h3 class="m-4 text-secondary">Edit Advertisement</h3>

<form class="d-flex mt-5" asp-action="Edit" method="post" enctype="multipart/form-data">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="row  m-auto w-75">

        <div class="col-6">
            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="col-12  form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Price"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Price" class="col-12  form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>

        <div class="col-6">
            <div class="form-group mb-2">
                <label asp-for="CategoryId" for="inputGroupSelect01"></label>
                <select class="custom-select col-12 form-control" id="inputGroupSelect01">
                    <option selected>Choose...</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PhotosNames"></label>
                <input asp-for="PhotosNames" class="col-12 form-control" type="file" multiple style="" />
                <span asp-validation-for="PhotosNames" class="text-danger"></span>

            </div>

        </div>
        <div class="form-group mt-5 w-50 text-center d-flex justify-content-around">
            <input type="submit" value="Edit" class="btn btn-success font-weight-bold w-25" style="font-size: 17px;" />
        </div>
    </div>
</form>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

