@model IEnumerable<AdvertisementDTO>
@{
    List<string> list = ViewBag.listC;
   

}


<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (string item in list)
                    {
                        <li data-filter=".@item">@item</li>
                    }

                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var i in Model)
            {

                <div class="col-lg-4 col-md-6 portfolio-item @i.Name">
                    <img src="~/assets/img/portfolio/portfolio-1.jpg" class="img-fluid" alt="">
                    <div class="portfolio-info">
                        <span class="mb-1 text-white">Catogry @i.CategoryId</span>
                        <p class="font-weight-bold"style="font-size:25px">@i.Name</p>
                        <div class="justify-content-between">

                            <div class="d-flex justify-content-between">
                                <div>
                                    <p style="font-size:20px">@i.Price.ToString("c")</p>
                                </div>

                                <div class="d-flex justify-content-around align-items-center w-25 ">
                                    <div class="mb-2">
                                        <a href="~/assets/img/portfolio/portfolio-1.jpg" data-gallery="portfolioGallery" class="portfolio-lightbox" title="FullScreen"><i class="bi bi-arrows-fullscreen m-1" style="font-size:17px"></i></a>

                                    </div>
                                    <div class="d-flex align-items-center">
                                        <a asp-controller="Advertisements" asp-action="Details" asp-route-Name="@i.Name" class="" title="More Details"><i class="bx bx-link" style="font-size:22px"></i></a>

                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between pr-2">
                                <a asp-controller="Advertisements" class="btn btn-primary" asp-action="Details">Buy Now</a>

                                <a asp-controller="Home" asp-action="HomePage" asp-route-id="@i.Name"><i class="bi bi-cart-plus text-danger" title="Add To Cart" style="font-size:25px"></i></a>

                            </div>



                        </div>


                    </div>
                </div>
            }

        </div>

    </div>
</section>

