@model IEnumerable<ShoppingCartVM>
@{ 
    decimal totalPrice = 0;
}

<div class="container pt-5">
    @if (Model.ToList().Count > 0)
    {
    <h2 class="text-primary">Shopping Cart</h2>
    <hr />
    @foreach(var item in Model) {
        totalPrice += item.Advertisement.Price;
    <div class="d-flex justify-content-between w-75">
        <div class="">
            <img src="@item.Advertisement.PhotosNames.First()" class="img-fluid" width="200px" height="200px" alt="">
        </div>
        <div>
            <h5 class="font-weight-bold p-1">@item.Advertisement.Name</h5>
            <span class="p-1">Resturant</span>
        </div>
        <div>
            <span class="p-1">@item.CreatedAt.ToString("T")</span>
        </div>
        <div class="col-3  d-flex flex-column justify-content-between">
            <h5 class="font-weight-bold  d-flex justify-content-end">@item.Advertisement.Price.ToString("c")</h5>
            <div class="d-flex justify-content-end"><a asp-action="DeleteFromCart" asp-route-id="@item.ShoppingCartId" class="btn btn-danger text-white">Delete</a></div>
        </div>
    </div>
    <hr />
    }
    <div class=" d-flex flex-column align-items-end">
        <h4 class="p-2 font-weight-bold text-success">Total: @totalPrice.ToString("c")</h4>
        <div class="m-2"><a class="btn btn-primary text-white">Check Out</a></div>

    </div>

    }
</div>
